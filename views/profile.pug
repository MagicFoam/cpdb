extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                #user
                    h1.text-center.login-title Информация о вас:
                        div.signup-wall
                            ul.user-details
                                li Имя пользователя: #{user.username}
                                li E-mail: #{user.email}
                                li Имя: #{user.firstName}
                                li Фамилия:  #{user.lastName}
                                conditionals
                                    if user.gender == 'f'
                                        li Ваш пол: женский
                                    else
                                        li Ваш пол: мужской
                                li Дата рождения: #{user.birthday.getDay()}/#{user.birthday.getMonth() + 1}/#{user.birthday.getFullYear()}
                        a(href='/home', class='text-center new-account') Назад к поиску